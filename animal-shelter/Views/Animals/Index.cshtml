@{
  Layout = "_Layout";
}
<div class="container">
  <h3><u>Animal List</u></h3>
  <br>


  @if (@Model.Count == 0) 
  {
      <h3>You have no animals listed.</h3>

  }
  @foreach (var animal in Model)
  {
    <h3><a href='/animals/@animal.GetName()'>@animal.GetName()</a></h3>
  }
  <br>
  <h3><a href='/animals/new'>Add a New Animal</a></h3>
  <br>
  <p><a href='/'>Back home</a></p>

</div>